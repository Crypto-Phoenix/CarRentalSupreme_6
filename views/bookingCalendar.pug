extends layout

block content
  .wrapper
      #header
        h2 Select the period of time that you want to rent a car:

      form#carcal(method="post" action="/bookingCalendar")
        .form-group
          input#dateFrom(type="text" name="bookedFr" value="From:")
        .form-group
          input#dateTo(type="text" name="bookedTo" value="To:")
        .form-group
          input#submitForm(type="submit" value="Check for available cars!" class="btn btn-info")

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js" type="text/javascript")
  script(src="//ajax.googleapis.com/ajax/libs/jqueryui/1.9.2/jquery-ui.min.js")
  link(rel="stylesheet" type="text/css" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css")
  script(type="text/javascript" src="./public/js/calendar.js")
